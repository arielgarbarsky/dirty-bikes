<div class="container py-3">
  <div class="row">
    <div class="col-md-8">

      <h2>Booking Summary for <%= @bike.user.first_name.capitalize %>'s dirt bike!</h2>

      <div class="card p-3 mb-2">
        <p><strong><%= @bike.brand.upcase %></strong></p>
        <p><small><%= @bike.location %></small></p>
        <span>Daily rate of $<%= @bike.price %></span>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card p-3 mb-2">
        <%= simple_form_for([@bike, @booking]) do |f| %>
          <%= f.error_notification %>
          <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

          <div class="form-inputs">
            <%= f.input :rent_date %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Book Dirt Bike!", class: "btn btn-success" %>
          </div>
        <% end %>
        <div class="d-flex justify-content-between mt-3 border-bottom">
        </div>
        <div class="d-flex justify-content-between mt-3">
          <p><strong>Total</strong></p>
          <p><strong>$<%= @bike.price %></strong></p>
        </div>
      </div>
    </div>
    <div class="col-md-3">
        <img src="https://images.unsplash.com/photo-1525013066836-c6090f0ad9d8?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1350&q=80" alt="" class="w-100 rounded">
    </div>
  </div>
</div>


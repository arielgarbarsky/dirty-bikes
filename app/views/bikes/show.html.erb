<div class="container py-1 ">
  <div class="row">
    <div class="px-5 col-md-12 m-3 border-bottom">
      <h1><em>Touch <strong>Book Now</strong> to reserve this baby!</em></h1>
    </div>
  </div>
    <div class="container">
    <div class="card-bike card-bike-detail">
      <div class="bike-show-photo" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)),
        url('<%= cl_image_path @bike.photos.first.key, height: 500, crop: :fill %>')">
      </div>
        <div class="card-bike-infos m-2">
          <div class="px-3 mr-auto">
            <h2> <strong>Brand:</strong> <%= @bike.brand %></h2>
            <h2><strong>Price:</strong> $<%= @bike.price %>/day</h2>
            <br>
            <p><strong>Owner:</strong> <%= @bike.user.first_name %></p>
            <p><strong>Description:</strong> <%= @bike.description %></p>
          </div>
        <%= link_to "Book Now!", new_bike_booking_path(@bike), class: "mb-3 btn btn-primary btn-lg" %>
      </div>
    </div>
  </div>
</div>

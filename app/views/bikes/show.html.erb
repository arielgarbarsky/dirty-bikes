<div class="page">
  <%= render 'shared/navbar' %>
  <br>
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-xl-8">
        <div class="row card-show-bike">
          <div class="bike-img">
            <img height="250" width="250" src="https://i2.wp.com/www.asphaltandrubber.com/wp-content/uploads/2019/03/Mugen-E-Rex-Hachi-electric-dirt-bike-02-scaled.jpg?fit=2560%2C1707&ssl=1">
          </div>
          <div class="col-6">
            <div class="bike-info p-2">
              <h1><%= @bike.brand %></h1>
              <h2><%= @bike.location %></h2>
            </div>
            <div class="bike-price">
              <h2>$<%= @bike.price %></h2>
            </div>
          </div>
        </div>
        <div class="row card-show-details">
          <div class="col">
            <div class="bike-details p-3">
              <h2>Bike details</h2>
              <ul>
                <li>Description: <%= @bike.description %></li>
                <li>Owner: <%= @bike.user.first_name %></li>
              </ul>
            </div>
          </div>
            <div class="col align-items-center">
              <div class="bike-booking p-3">
                <%= link_to "Book Now!", new_bike_booking_path(@bike), class: "btn btn-primary btn-lg" %>
              </div>
            </div>
        </div>
      </div>
        <div class="col-xs-12 col-xl-4">
          <div class=form-container>
            <div class="header">
              <h2>$<%= @bike.price %>/day</h2>
            </div>

          </div>
        </div>
    </div>
  </div>
  <%= render 'shared/footer' %>
</div>

<div class="search-bar">
  <%= form_tag bikes_path, method: :get do %>
  <div class="form-search">
    <%= text_field_tag :query,
    params[:query],
    class: "form-control",
      placeholder: "Look for a brand or a location" %>
      <%= submit_tag "Search", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>

  <div class="banner-bike-homepage" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://wallpaperstrend.com/wp-content/uploads/Sports/Sports01/moto-sports-dirt-bike-racing-hd-wallpaper-2560x1440.jpg);">
    <div class="container-banner">
      <h1><strong>Rent a Dirt Bike and spend a great adventure in Israel!</strong></h1>
      <p>Yamaha, Suzuki, BMW, Ducati, KTM, among others!</p>
    </div>
  </div>

<div class="container-card-and-buttons-homepage col-12">
  <div class="buttons-card-homepage">
    <div><h1 class="button-inside-bike-card btn btn-primary"><%= link_to "See available bikes", bikes_path(@bike) %></h1></div>
    <div><h1 class="button-inside-bike-card btn btn-primary"><%= link_to "Rent out your bike!", new_bike_path(@bike) %></h1></div>
    <div><h1 class="button-inside-bike-card btn btn-primary"><%= link_to "See your bookings", dashboard_path %></h1></div>
  </div>
  <div class="cards-bike-homepage">
    <div class="card-category-bike-homepage" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1517404084029-d6be5421be66?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=750&q=80)"></div>
    <div class="card-category-bike-homepage" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1453901593090-e57bfb58f39b?ixlib=rb-1.2.1&auto=format&fit=crop&w=801&q=80)"></div>
    <div class="card-category-bike-homepage" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1522922952185-2e35f28eec57?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=755&q=80)"></div>
  </div>
</div>
